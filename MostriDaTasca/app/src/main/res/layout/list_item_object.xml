<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@drawable/button"
    android:backgroundTint="@color/defaultBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageObjectListItem"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="2dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/candy_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameObjectListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Object"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/statsObjectListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level and Type" />

    </LinearLayout>

    <TextView
        android:id="@+id/distanceObjectListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance" />
</LinearLayout>